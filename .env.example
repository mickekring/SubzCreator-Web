# ================================
# Application Configuration
# ================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ================================
# Authentication (NextAuth.js)
# ================================
# Generate with: openssl rand -base64 32
AUTH_SECRET=your_auth_secret_here
AUTH_URL=http://localhost:3000

# ================================
# Database - NocoDB
# ================================
NOCODB_URL=https://your-nocodb-instance.com
NOCODB_API_TOKEN=your_api_token_here
NOCODB_BASE_NAME=SubzCreator

# ================================
# ASR Services (OpenAI Compatible)
# ================================
# Berget AI - KB Whisper ASR (Swedish-optimized, default)
BERGET_API_KEY=your_berget_api_key
BERGET_BASE_URL=https://api.berget.ai/v1

# Groq - Whisper ASR (alternative)
GROQ_API_KEY=your_groq_api_key
GROQ_BASE_URL=https://api.groq.com/openai/v1

# Default ASR provider to use (berget or groq)
DEFAULT_ASR_PROVIDER=berget

# ================================
# Translation Services (LLM)
# ================================
# OpenAI API key for GPT-4.1 translation
OPENAI_API_KEY=your_openai_api_key

# OpenAI translation model (default: gpt-4.1)
TRANSLATION_MODEL=gpt-4.1

# Berget AI translation model
# Options: openai/gpt-oss-120b (default, reasoning), mistralai/Mistral-Small-3.2-24B-Instruct-2506
BERGET_TRANSLATION_MODEL=openai/gpt-oss-120b

# Batch size for translation (segments per API call)
TRANSLATION_BATCH_SIZE=25

# Default translation provider (openai or berget)
TRANSLATION_PROVIDER=berget

# ================================
# Object Storage (S3-Compatible)
# ================================
S3_ENDPOINT=objects.dc-sto1.glesys.net
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key
S3_BUCKET=your-bucket-name
S3_BUCKET_NAME=your-bucket-name
S3_FILE_URL=https://objects.dc-sto1.glesys.net/your-bucket-name
S3_DEFAULT_REGION=dc-sto1

# S3 Directory Structure
S3_UPLOAD_FILE_DIR=subzcreator/upload
S3_VIDEO_FILE_DIR=subzcreator/video
S3_AUDIO_FILE_DIR=subzcreator/audio
S3_SUBS_DIR=subzcreator/subs

# ================================
# Media Processing
# ================================
FFMPEG_TEMP_DIR=/tmp/subzcreator

# ================================
# Redis (Optional - for caching)
# ================================
REDIS_URL=redis://localhost:6379
